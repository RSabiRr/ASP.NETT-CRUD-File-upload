@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/adminn/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="adminn" asp-controller="Product" asp-action="create">Create</a>
        </div>
        <div class="col-log-12">
            <table class="table">
                <thead>
                    <tr class="mr-2">
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Category</th>
                        <th scope="col">Valuation</th>
                        <th scope="col">Price</th>
                        <th scope="col">Content</th>
                        <th scope="col"></th>




                    </tr>
                </thead>
                <tbody class="mr-2">
                    @{ int i = 0;}
                    @foreach (var item in Model)
                    {
                        i++;
                    <tr class="mr-2">
                        <th scope="row">@i</th>
                        <td><img src="~/Uploads/@item.Image" alt="Alternate Text" style="max-width:150px; max-height:150px "/></td>
                        <td>@item.Title</td>
                        <td>@item.Category</td>
                        <td>@item.Valuation</td>
                        <td>@item.Price</td>
                        <td>@(item.Content.Length>150? item.Content.Substring(0,150):item.Content)</td>



                        <td>
                            <a class="btn btn-success" asp-area="adminn" asp-controller="Product" asp-action="update" asp-route-id="@item.Id">Update</a>
                            <a class="btn btn-danger" asp-area="adminn" asp-controller="Product" asp-action="delete" asp-route-id="@item.Id" onclick="return confirm('Silmek isteyirsiz?')">Delete</a>

                        </td>
                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

