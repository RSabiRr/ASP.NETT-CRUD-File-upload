@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/adminn/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="adminn"  asp-controller="blogCategory" asp-action="create">Create</a>
        </div>
        <div class="col-log-12">
            <table class="table">
                <thead>
                    <tr class="mr-2">
                        <th scope="col">#</th>
                        <th scope="col">Category</th>

                    </tr>
                </thead>
                <tbody class="mr-2">
                    @{ int i = 0;}
                    @foreach ( var item in Model)
                    {
                        i ++;
                        <tr class="mr-2">
                            <th scope="row">@i</th>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn btn-success" asp-area="adminn" asp-controller="blogCategory" asp-action="update" asp-route-id="@item.Id" >Update</a>
                                <a class="btn btn-danger"  asp-area="adminn" asp-controller="blogCategory" asp-action="delete" asp-route-id="@item.Id" onclick="return confirm('Silmek isteyirsiz?')" >Delete</a>

                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
